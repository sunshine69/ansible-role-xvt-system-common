- name: sleep 1 sec (override with variable ubuntu_common_sleep) for the aws storage to be available
  pause: seconds="{{ubuntu_common_sleep | default(1)}}"

- name: Install aptitude
  apt: name=aptitude state=installed update_cache=yes cache_valid_time=0

- name: Upgrade Ubuntu
  apt: update_cache=yes upgrade=yes

- name: Set timezone to Australia/Sydney
  timezone: name={{ ubuntu_timezone }}

- name: Install common packages
  apt:
    name: '{{item}}'
    state: installed
  with_items: "{{ default_packages }}"

